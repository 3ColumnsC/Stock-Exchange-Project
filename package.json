{
  "name": "stock-exchange-project",
  "version": "2.0",
  "description": "A powerful Node.js application that monitors stock and cryptocurrency prices in real-time and sends alerts when significant price changes occur.",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently -k \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on tcp:3000 && cross-env NODE_ENV=development electron .",
    "build": "vite build && electron-builder",
    "build:react": "vite build",
    "build:electron": "electron-builder",
    "preview": "vite preview"
  },
  "author": "3ColumnsCreations",
  "license": "Creative Commons Attribution-NonCommercial 4.0 International License (CC BY-NC 4.0)",
  "licenseUrl": "https://creativecommons.org/licenses/by-nc/4.0/",
  "repository": {
    "type": "git",
    "url": "https://github.com/3ColumnsC/Stock-Exchange-Project"
  },
  "build": {
  "productName": "Stock Exchange Project",
  "files": ["dist/**/*", "main.js", "preload.js"],
  "directories": {
    "output": "release"
  },
  "win": {
    "target": ["nsis"],
    "icon": "assets/icon.ico"
  },
  "mac": {
    "target": ["dmg"],
    "icon": "assets/icon.icns"
  },
  "linux": {
    "target": ["AppImage"],
    "icon": "assets/icon.png"
  }
},
  "dependencies": {
    "@vitejs/plugin-react": "5.0.2",
    "dotenv": "16.4.5",
    "electron": "36.3.2",
    "express": "5.1.0",
    "i18next": "25.5.2",
    "i18next-browser-languagedetector": "8.2.0",
    "node-cron": "3.0.3",
    "node-fetch": "3.3.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-i18next": "15.7.3",
    "resend": "4.5.1",
    "yahoo-finance2": "2.4.0"
  },
  "devDependencies": {
    "autoprefixer": "10.4.16",
    "concurrently": "9.2.1",
    "cross-env": "10.0.0",
    "electron-builder": "26.0.12",
    "postcss": "8.4.31",
    "rollup-plugin-postcss": "4.0.2",
    "tailwindcss": "3.4.1",
    "vite": "7.1.5",
    "wait-on": "8.0.4"
  }
}
